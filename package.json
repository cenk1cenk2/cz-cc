{
  "name": "@cenk1cenk2/cz-cc",
  "version": "2.1.1",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "repository": "git@gitlab.kilic.dev:libraries/cz-cc.git",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "license": "MIT",
  "type": "commonjs",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown src/",
    "dev:start": "tsdown --watch src/",
    "format": "prettier --log-level warn --write src/ && eslint --fix",
    "lint": "eslint"
  },
  "simple-git-hooks": {
    "pre-commit": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "@listr2/prompt-adapter-inquirer": "^3.0.1",
    "commitizen": "^4.3.1",
    "conventional-commit-types": "^3.0.0",
    "find-git-root": "^1.0.4",
    "listr2": "^9.0.1"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^3.1.60",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.13.2"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.js"
    }
  },
  "packageManager": "pnpm@9.6.0"
}
