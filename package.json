{
  "name": "@cenk1cenk2/cz-cc",
  "version": "1.7.5",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "repository": "git@gitlab.kilic.dev:libraries/cz-cc.git",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "license": "MIT",
  "type": "commonjs",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "format": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx src/"
  },
  "simple-git-hooks": {
    "pre-commit": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@listr2/prompt-adapter-enquirer": "^2.0.2",
    "commitizen": "^4.3.0",
    "conventional-commit-types": "^3.0.0",
    "enquirer": "^2.4.1",
    "external-editor": "^3.1.0",
    "find-git-root": "^1.0.4",
    "listr2": "^8.0.2"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^2.7.39",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.1"
  },
  "optionalDependencies": {
    "@commitlint/load": "^17.5.0 || ^18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.js"
    }
  }
}
