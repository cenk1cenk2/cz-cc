{
  "name": "@cenk1cenk2/cz-cc",
  "version": "1.8.0",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "repository": "git@gitlab.kilic.dev:libraries/cz-cc.git",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "license": "MIT",
  "type": "commonjs",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "format": "prettier --log-level warn --write src/ && eslint --fix src/",
    "lint": "eslint src/"
  },
  "simple-git-hooks": {
    "pre-commit": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@listr2/prompt-adapter-enquirer": "^2.0.12",
    "commitizen": "^4.3.1",
    "conventional-commit-types": "^3.0.0",
    "enquirer": "^2.4.1",
    "external-editor": "^3.1.0",
    "find-git-root": "^1.0.4",
    "listr2": "^8.2.5"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^3.1.29",
    "eslint": "^9.22.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.js"
    }
  },
  "packageManager": "pnpm@9.6.0"
}
