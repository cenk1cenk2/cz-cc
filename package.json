{
  "name": "@cenk1cenk2/cz-cc",
  "version": "1.5.3",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "repository": "git@gitlab.kilic.dev:libraries/cz-cc.git",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "license": "MIT",
  "type": "commonjs",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "colorette": "^2.0.17",
    "commitizen": "^4.2.4",
    "conventional-commit-types": "^3.0.0",
    "enquirer": "^2.3.6",
    "enquirer-editor": "^1.0.0",
    "find-git-root": "^1.0.4",
    "listr2": "^4.0.5",
    "lodash.map": "^4.6.0",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@cenk1cenk2/eslint-config": "^2.5.14",
    "eslint": "^8.16.0",
    "external-editor": "^3.1.0",
    "lint-staged": "^11",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.8.0",
    "tsup": "^6.0.1"
  },
  "optionalDependencies": {
    "@commitlint/load": "^16.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.js"
    }
  }
}
