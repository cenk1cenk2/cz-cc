{
  "name": "@cenk1cenk2/cz-cc",
  "version": "1.0.0-development",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "main": "./dist/index.js",
  "repository": "https://github.com/cenk1cenk2/cz-cc",
  "author": "Cenk Kilic <cenk@kilic.dev> & Jim Cummins <jimthedev@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "babel src --out-dir dist/",
    "lint": "prettier --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 10"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "commitizen": "^4.2.4",
    "conventional-commit-types": "^3.0.0",
    "enquirer": "^2.3.6",
    "enquirer-editor": "^1.0.0",
    "enquirer-prompt-editor": "^2.0.1",
    "find-git-root": "^1.0.4",
    "listr2": "^3.8.3",
    "lodash.map": "^4.6.0",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@cenk1cenk2/eslint-config": "^0.4.38",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "optionalDependencies": {
    "@commitlint/load": "^12.1.4"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.js"
    }
  }
}
